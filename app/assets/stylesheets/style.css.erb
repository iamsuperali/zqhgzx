/*导航*/
/*
LEVEL ONE
*/
ul.dropdown                         { position: relative;z-index: 99999; }
ul.dropdown li                      {  float: left; zoom: 1;padding:0 10px;background: url(<%=asset_path "nav_split.jpg" %>) no-repeat right 5px}
ul.dropdown a:hover		            { color: #fff; }
ul.dropdown a:active                { color: #ffa500; }
ul.dropdown li a                    { display: block; padding: 4px 8px;color: #fff;}
ul.dropdown li:last-child a         { border-right: none; } /* Doesn't work in IE */
ul.dropdown li.hover,
ul.dropdown li:hover                { color: black; position: relative; }
ul.dropdown li.hover a              { color: black; }


/*
LEVEL TWO
*/
ul.dropdown ul{
width: 220px;
visibility: hidden;
position: absolute;
top: 100%; left: 0;
z-index: 100;
}

ul.dropdown ul li{
font-weight: normal;
background: #f6f6f6;
color: #000;
border-bottom: 1px solid #ccc;
float: none;
*filter: Alpha(opacity=90);
-moz-opacity:.9;
opacity:0.9;
}

/* IE 6 & 7 Needs Inline Block */
ul.dropdown ul li a					{ border-right: none; width: 100%; display: inline-block; color: #000;background-image: none;}
ul.dropdown ul li a:hover			{ color: #000;}

/*
LEVEL THREE
*/
ul.dropdown ul ul 					{ left: 100%; top: 0; }
ul.dropdown li:hover > ul 			{ visibility: visible; }

*ul.dropdown ul li					{ display: inline; width: 100%; }

#nav-end{
background-image: none;
}

/*导航结束*/

